<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>New student</title>
  <script src="./formValidation.js"></script>
  <link rel="stylesheet" href="./styles.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@800&display=swap" rel="stylesheet">
</head>
<body>
  <img id="logo" src="West-MEC_logo.jpg" alt="West MEC Logo">
  <form action="/formInput" method="post">
    <fieldset>
      <legend>Create New Student</legend>
      <div class="formGroup">
        <label for="fName">First Name:</label>
        <input type="text" name="fName" id="fName" onfocusout="return validateFirstName()" required>
      </div>
      <div class="formGroup">
        <label for="lName">Last Name:</label>
        <input type="text" name="lName" id="lName" onfocusout="return validateLastName()" required>
      </div>
      <div class="formGroup">
        <label for="email">Email:</label>
        <input type="text" name="email" id="email" onfocusout="return validateEmail()" required>
      </div>
      <div class="formGroup">
        <label for="phone">Phone:</label>
        <input type="tel" name="phone" id="phone" onfocusout="return validatePhoneNumber()" required>
      </div>
      <div class="formGroup">
        <label for="address">Address:</label>
        <input type="text" name="address" id="address" required>
      </div>
    </fieldset>
    <button type="submit" id="submitBTN">Create Student</button>
  </form>
  <div id="userList">
    <% if (users.length == 0) { %>
      <h1>No current users</h1>
    <% } %>
    <hr>
    <% users.forEach(user => { %>
      <h1><%= user.fName %> <span>| <a href="/viewUser/<%= user._id %>">View</a> |<a href="/editPage/<%= user._id %>">Edit</a>|<a href="/delete/<%= user._id %>">Delete</a>|</span></h1>
      <hr>
    <% }) %>
  </div>
</body>
</html>
